<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">


    <ImageView
            android:layout_width="205dp"
            android:layout_height="226dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/detailImageView" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Mission Name Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailMissionName"
            app:layout_constraintTop_toBottomOf="@+id/detailImageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" android:textStyle="bold"
            android:textSize="22dp"/>
    <ListView
            android:layout_width="394dp"
            android:layout_height="386dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detailMissionName" android:id="@+id/detailListView"/>
</android.support.constraint.ConstraintLayout>